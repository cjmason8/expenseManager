<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
    <Appenders>
        <RollingFile name="File" fileName="/applogs/authenticationService.log" filePattern="/applogs/authenticationService-backup-%d{MM-dd-yy-HH-mm-ss}-%i.log.gz">
            <PatternLayout>
                <pattern>{\"application\":\"Expense Manager\",\"dateTime\":\"%d{yyyy-MM-dd HH:mm:ss}\", \"msg\":\"%-5p %c{1}:%L - %m%n\"}</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB" />
            </Policies>
        </RollingFile>
        <GELF name="gelfAppender" server="172.17.0.1" port="12201" hostName="172.17.0.1" protocol="UDP">
        	<PatternLayout>
                <pattern>{\"application\":\"Expense Manager\",\"dateTime\":\"%d{yyyy-MM-dd HH:mm:ss}\", \"msg\":\"%-5p %c{1}:%L - %m%n\"}</pattern>
            </PatternLayout>
	    </GELF>
    </Appenders>
    <Loggers>
        <Root level="info" additivity="false">
            <appender-ref ref="File" />
            <appender-ref ref="gelfAppender" />
        </Root>
    </Loggers>
</Configuration>